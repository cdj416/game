<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/color_FFFFFF"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/payMethod"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textColor="@color/color_5f5f5f"
                android:text="微信"/>
            <TextView
                android:id="@+id/payPrice"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textColor="@color/color_5f5f5f"
                android:text="100"/>
            <TextView
                android:id="@+id/payDate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textColor="@color/color_5f5f5f"
                android:text="2019-06-12 10:39:01"/>
        </LinearLayout>
        <TextView
            android:id="@+id/payStatic"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="@color/color_13B6A5"
            android:layout_alignParentRight="true"
            android:text="已收款"/>

        <TextView
            android:id="@+id/submitPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:textColor="@color/color_FFFFFF"
            android:background="@drawable/shape_radius3_13b6a5"
            android:layout_alignParentRight="true"
            android:text="确定"/>
    </RelativeLayout>
</LinearLayout>
